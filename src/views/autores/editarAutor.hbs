<h2>Editar Autor</h2>
<form action="/autores/editar/{{autor.id}}" method="POST">
  <div class="form-group">
    <label for="nombre">Nombre del Autor</label>
    <input type="text" name="nombre" value="{{autor.nombre}}" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="correo">Correo</label>
    <input type="email" name="correo" value="{{autor.correo}}" class="form-control" required>
  </div>
  <button type="submit" class="btn btn-primary">Guardar Cambios</button>
  <a href="/autores" class="btn btn-secondary">Volver</a>
</form>
