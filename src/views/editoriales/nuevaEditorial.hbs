<h2>Crear Nueva Editorial</h2>

{{#if error}}
  <div class="alert alert-danger" role="alert">
    {{error}}
  </div>
{{/if}}

<form action="/editoriales/crear" method="POST">
  <div class="form-group">
    <label for="nombre">Nombre de la Editorial</label>
    <input type="text" id="nombre" name="nombre" class="form-control" maxlength="255" required>
  </div>
  <div class="form-group">
    <label for="telefono">Teléfono</label>
    <input type="text" id="telefono" name="telefono" class="form-control" maxlength="20" required>
  </div>
  <div class="form-group">
    <label for="pais">País</label>
    <input type="text" id="pais" name="pais" class="form-control" maxlength="100" required>
  </div>
  <button type="submit" class="btn btn-primary">Crear Editorial</button>
  <a href="/editoriales" class="btn btn-secondary">Volver</a>
</form>
